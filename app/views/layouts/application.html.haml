!!! Strict
%html
  %head
    %title= "Mission of Mercy - #{yield(:title) || controller_name.humanize}"
    
    = javascript_include_tag :defaults, 'modalbox.js', 'application_old'
    = javascript_include_tag 'helpers'
    
    = stylesheet_link_tag 'default', :media => :screen
    = stylesheet_link_tag 'modalbox'
    
    /Active Bar
    = javascript_include_tag 'jquery-1.5.1.min', 'activebar/activebar2.js'
    :javascript
      jQuery.noConflict();
      MoM.init('#{form_authenticity_token}');
      #{yield(:header_js)}
    
    = yield(:header)
    
  %body{:class => body_css}
    #help_request
    #outer_container
      #container
        = render :partial => 'users/user_bar'
        #contents
          = render :partial => "shared/flash", :locals => { :flash => flash }
          = yield
        #footer-version
          = "Version #{app_version}"