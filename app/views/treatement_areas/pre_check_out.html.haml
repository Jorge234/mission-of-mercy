- title 'Pre-Checkout'

- header do
  %h1= image_tag("logo_small.png") + " Pre-Checkout"
  = "#{@patient.full_name} | Chart # #{@patient.id}"
  
- form_for @patient, :url => treatement_area_pre_checkout_path(@treatement_area, @patient) do |f|
  = f.error_messages
  
  - f.fields_for :survey do |s|  
    %h4 
      Medical Information (From 
      %u Health History
      on Patient's Chart)
  
    %p
      = s.check_box :tobacco_use
      = s.label :tobacco_use
  
    %h4 Were you told today that you needed more dental treatment? (another cavity filled, a root canal etc.)
  
    %p
      = s.radio_button :told_needed_more_dental_treatment, true
      = s.label :told_needed_more_dental_treatment, "Yes", :value => true
      = s.radio_button :told_needed_more_dental_treatment, false
      = s.label :told_needed_more_dental_treatment, "No", :value => false
  
  %h4 Pre-Medication
  
  %p
    - f.fields_for :patient_pre_meds do |p|
      = p.hidden_field :pre_med_id
      = p.check_box :prescribed
      = p.label :prescribed, p.object.pre_med.description
      %br
  
  %h4 Rating of services received today

  = slider_field :survey, :rating_of_services, :range => 1..10 
  %br
  %div.slider_desc Not Satisfied
  %div.slider_desc Satisfied
  %div.slider_desc Very Satisfied
    
  #input-bottom{:class => "check_out"}
    %br
    = f.submit "Next"
    = link_to "Cancel", patients_path(:treatement_area_id => @treatement_area.id), :class => 'warning'