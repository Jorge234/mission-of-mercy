<% title 'Home' %>

<% header do %>
<h1><%= image_tag "logo_small.png" %> CT Mission of Mercy 2010</h1>
<% end %>

<% if logged_in? %>
  <%= if current_user.user_type == UserType::ADMIN
        render :partial => 'admin_index'
      elsif current_user.user_type == UserType::CHECKIN
        render :partial => 'user_index'
      elsif current_user.user_type == UserType::CHECKOUT
        render :partial => 'checkout_index'
      elsif current_user.user_type == UserType::XRAY
        render :partial => 'xray_index'
      end
  %>
<% else %>
  <h3><%= link_to 'Click here to log in', login_path, :class => 'back' %></h3>
<% end %>
